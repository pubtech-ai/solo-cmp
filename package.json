{
  "name": "@pubtech/solo-cmp",
  "version": "1.0.0",
  "description": "Wrapper of IAB module that make simple to made a CMP",
  "author": "Marco Prontera <https://github.com/Marco-Prontera>",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "ts-mocha -p tsconfig.commonjs.json test/**/*.test.ts -r jsdom-global/register",
    "test-parallel": "ts-mocha -p tsconfig.commonjs.json test/**/*.test.ts -r jsdom-global/register  --parallel",
    "build": "tsc",
    "build:check": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{js,ts}' --quiet --fix",
    "prettier:format": "prettier --config .prettierrc.js 'src/**/*.ts' 'test/**/*.{js,ts}' --write",
    "clean:build": "prettier --config .prettierrc.json 'src/**/*.ts' --write && eslint 'src/**/*.{js,ts}' 'test/**/*.{js,ts}' --quiet --fix && tsc"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/pubtech-ai/solo-cmp.git"
  },
  "dependencies": {
    "@iabtcf/cmpapi": "1.2.1",
    "@iabtcf/core": "1.2.1",
    "@iabtcf/stub": "1.2.1",
    "bottlejs": "^2.0.0"
  },
  "devDependencies": {
    "@iabtcf/testing": "^1.2.1",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.31",
    "@types/sinon": "^10.0.2",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "chai": "^4.3.4",
    "eslint": "^7.20.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-json": "^3.0.0",
    "jsdom": "16.6.0",
    "jsdom-global": "3.0.2",
    "mocha": "^9.0.0",
    "prettier": "2.2.1",
    "sinon": "^11.1.1",
    "sinon-chai": "^3.7.0",
    "ts-mocha": "^8.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  },
  "files": [
    "lib/**/*"
  ]
}
